<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="30dp"
        android:text="Lovely Professional University"
        android:textColor="#7D6AEA"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/lpu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Get started with your work, school or"
        android:textColor="#8C8C8C" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:text="personal LPU account"
        android:textColor="#8C8C8C" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        style="@style/Widget.MaterialComponents.TimePicker.Display.TextInputEditText"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="20dp"
        android:background="#9EEDEDED"
        android:hint="Enter email, phone, or Skype"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:text="Sign in"
        android:textAllCaps="false"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="206dp"
        android:layout_height="30dp"
        android:layout_marginLeft="102dp"
        android:background="#3F51B5"
        android:singleLine="true"
        android:text="Get help with signing in"
        android:textColor="#7D6AEA"
        android:textSize="9dp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/button3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:backgroundTint="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="8"
        android:text="Join a metting"
        android:textAllCaps="false"
        android:textColor="#7D6AEA"
        android:textSize="12sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:strokeColor="#7D6AEA"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@mipmap/lpu"
        android:text="Sign up for free"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#7D6AEA"
        android:textSize="12sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:strokeColor="#7D6AEA"
        app:strokeWidth="2dp" />




</LinearLayout>